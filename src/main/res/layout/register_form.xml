<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradientbg1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_launcher_foreground"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android Listing App"
                android:layout_gravity="center"
                android:textSize="30sp"
                style="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="text"
                android:background="@drawable/edit_text_bg"
                android:layout_marginHorizontal="25dp"
                android:layout_marginVertical="5dp"
                android:padding="8sp"
                android:hint="Name"
                android:id="@+id/register_name"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="number"
                android:background="@drawable/edit_text_bg"
                android:layout_marginHorizontal="25dp"
                android:layout_marginVertical="5dp"
                android:padding="8sp"
                android:hint="Age"
                android:id="@+id/register_age"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="text"
                android:background="@drawable/edit_text_bg"
                android:layout_marginHorizontal="25dp"
                android:layout_marginVertical="5dp"
                android:padding="8sp"
                android:hint="Gender"
                android:id="@+id/register_gender"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="text"
                android:background="@drawable/edit_text_bg"
                android:layout_marginHorizontal="25dp"
                android:layout_marginVertical="5dp"
                android:padding="8sp"
                android:hint="Birthday"
                android:id="@+id/register_birthday"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:inputType="textMultiLine"
                android:background="@drawable/edit_text_bg"
                android:layout_marginHorizontal="25dp"
                android:layout_marginVertical="5dp"
                android:padding="8sp"
                android:hint="Address"
                android:id="@+id/register_address"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="text"
                android:background="@drawable/edit_text_bg"
                android:layout_marginHorizontal="25dp"
                android:layout_marginVertical="5dp"
                android:padding="8sp"
                android:hint="Username"
                android:id="@+id/register_username"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="textPassword"
                android:background="@drawable/edit_text_bg"
                android:layout_marginHorizontal="25dp"
                android:layout_marginVertical="5dp"
                android:padding="8sp"
                android:hint="Password"
                android:id="@+id/register_password"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginHorizontal="25dp"
                android:background="@drawable/button_bg"
                android:text="Confirm"
                android:textColor="#000000"
                android:id="@+id/register_btnconfirm"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginHorizontal="25dp"
                android:background="@drawable/button_bg"
                android:text="Return"
                android:textColor="#000000"
                android:id="@+id/register_btnreturn"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>